.application {
    &.theme--dark {
        background: transparent
    }
    
    #navigation {
        .btn--floating {
            border-radius: 2px
        }
    }
    
    #hero {
        height: 100vh
        
        .hero {
            height: 100%
            overflow: hidden
            position: relative
            
            .layer {
                background-size: contain
                background-repeat: no-repeat
                background-position: bottom
                width: 100%
                height: 100%
                position: fixed
                z-index: -1

                &-01 {
                    background-color: color-primary
                    background-size: 100% auto
                }
                &-02 {
                    opacity: 0.7
                }
                &-03 {
                    opacity: 0.8
                }
                &-04 {
                    opacity: 0.9
                }
            }
        }
        
        .hero-mobile {
            display: none
        }
        
        .hero-header {
            position: relative
            left: 45%
            right: 0
            padding: 6rem 3rem 0
            background-color: alpha(color-primary, 0.8)
            width: 37%
            height: 100%
            
