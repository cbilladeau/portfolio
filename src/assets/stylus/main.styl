    #intro {
        background: color-secondary
        color: light-color-primary
        padding: 4rem 0 8rem
    }
    
    #skills {
        background-color: color-error
        align-items: stretch
        
        .v-parallax {
            overflow: visible
            height: auto !important
            padding-bottom: 2rem
            
            .v-parallax__image {
                opacity: 0.25 !important
                min-height: auto
            }
            @media screen and (max-width: 1263px) {
                .v-parallax__image {
                    display: none !important
                }
            }
        }
        
        .skills-container {
            margin-top: -6rem
        }
        
        .v-card {
            height: 100% !important
            padding: 3rem 2rem
            //background-color: white
            
            .v-card__title {
                padding: 0
                margin: 0
                display: block
            }
            
            .v-card__text {
                padding: 0.5rem 0
            }
        
            .skill-icon {
                height: 72px
                width: 100%
                fill: color-error
            }
        }
        
        .code-bar-chart {
            padding-top: 0.5rem
            padding-right: 0.75rem
            min-height: 250px
        }
    }
    
    #works {
        background: color-accent
        color: light-color-primary
        
        .lightbox {
            position: fixed
            top: 0
            left: 0
            bottom: 0
            right: 0
            background: dark-color-secondary
            width: 100%
            height: 100%
            z-index: 1
        }
        .lightbox__thumbnail {
            display: block
        }
        .lightbox__thumbnail img {
            width: 100%
            height: 100%
        }
        .lightbox__close {
            position: fixed
            right: 0
            top: 0
            padding: 1rem
            font-size: 1.5rem
            cursor: pointer
            color: light-color-primary
            font-weight: 700
            width: 4rem
            height: 4rem
        }
        .lightbox__arrow--invisible {
            visibility: hidden
        }
        .lightbox__element {
            height: 100%
            width: 100%
        }
        .lightbox__arrow {
            padding: 0 2rem
            cursor: pointer
            display: flex
            justify-content: center
            align-items: center
        }
        .lightbox__arrow svg {
            fill: light-color-primary
            pointer-events: none
        }
        .lightbox__image {
            flex: 1
        }
        .lightbox__image img {
            max-height: 100vh
            max-width: 100%
            display: block
            margin: auto
        }
        @media screen and (max-width: 720px) {
            .lightbox__arrow {
                padding: 0 1rem
            }
        }
        @media screen and (max-width: 500px) {
            .lightbox__element {
                position: relative
            }
            .lightbox__arrow {
                position: absolute
                padding: 0 2rem
                height: 100%
            }
            .lightbox__arrow--right {
                right: 0
                background: linear-gradient(to right, transparent, dark-color-tertiary)
            }
            .lightbox__arrow--left {
                left: 0
                background: linear-gradient(to left, transparent, dark-color-tertiary)
            }
        }
    }
    
    #about {
        background: light-color-primary
        align-items: stretch
    }
}