@charset 'UTF-8'

// Vueitfy Variable Overrides

$color-pack = false

$body-font-family = 'Geo Sans', sans-serif
$header-font-family = 'Typewriter Condensed', serif

$font-size-root = 18px

$headings = {
    h1: { size: 12rem, weight: 700, line-height: 1, letter-spacing: 0.5rem, font-family: $body-font-family },
    h2: { size: 5rem, weight: 300, line-height: 1.1, letter-spacing: -0.5rem, font-family: $header-font-family },
    h3: { size: 2rem, weight: 300, line-height: 1.15, letter-spacing: normal, font-family: $header-font-family },
    h4: { size: 1.75rem, weight: 300, line-height: 1.2, letter-spacing: normal, font-family: $header-font-family },
    h5: { size: 1.5rem, weight: 300, line-height: 1.35, letter-spacing: normal, font-family: $body-font-family },
    h6: { size: 1.25rem, weight: 300, line-height: 1.35, letter-spacing: normal, font-family: $body-font-family },
    subheading: { size: 1.25rem, weight: 300 },
    body-2: { size: 1rem, weight: 300 },
    body-1: { size: 0.9rem, weight: 300 },
    caption: { size: 0.9rem, weight: 300 },
    button: { size: 0.9rem, weight: 500 }
}

@import '~vuetify/src/stylus/app'


// Variables

body-font-family = 'Geo Sans', sans-serif
header-font-family = 'Typewriter Condensed', serif

dark-color-primary = rgba(0,0,0,0.87)
dark-color-secondary = rgba(0,0,0,0.56)
dark-color-tertiary = rgba(0,0,0,0.38)
dark-color-border = rgba(0,0,0,0.12)

light-color-primary = rgba(255,255,255,1)
light-color-secondary = rgba(255,255,255,0.7)
light-color-tertiary = rgba(255,255,255,0.5)
light-color-border = rgba(255,255,255,0.12)

color-primary = rgb(42,27,61)
color-secondary = rgb(68,49,141)
color-accent = rgb(216,63,135)
color-error = rgb(130,101,167)
color-warning = rgb(233,128,116)
color-success = rgb(0, 191, 165)
color-info = rgb(0, 184, 212)


