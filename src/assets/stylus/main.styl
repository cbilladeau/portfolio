@charset 'UTF-8'

$color-pack = false

@import '~vuetify/src/stylus/main'


// Variables

body-font = 'Geo Sans'
header-font = 'Typewriter Condensed'

dark-color-primary = rgba(0,0,0,0.87)
dark-color-secondary = rgba(0,0,0,0.56)
dark-color-tertiary = rgba(0,0,0,0.34)
dark-color-border = rgba(0,0,0,0.12)

light-color-primary = rgba(255,255,255,1)
light-color-secondary = rgba(255,255,255,0.7)
light-color-tertiary = rgba(255,255,255,0.5)
light-color-border = rgba(255,255,255,0.3)

color-white = rgb(255,255,255)

color-primary = rgb(42,27,61)
color-secondary = rgb(68,49,141)
color-tertiary = rgb(130,101,167)

color-accent-1 = rgb(216,63,135)
color-accent-2 = rgb(233,128,116)


// Type

 @font-face
   font-family Geo Sans
   font-style normal
   src url('~/public/GeosansLight.otf')

 @font-face
   font-family Geo Sans
   font-style italic
   src url('~/public/GeosansLight-Oblique.otf')
   
 @font-face
   font-family Typewriter Condensed
   font-style normal
   src url('~/public/TypewriterCondensed.otf')

 @font-face
   font-family Typewriter Condensed
   font-style bold
   src url('~/public/TypewriterCondensed-Bold.otf')


// Styling

body {
    .application {
        font-family: body-font, sans-serif
        font-size: 1.25rem
    
        a {
            color: color-accent-1
            text-decoration: none
            
            &:hover,
            &:focus,
            &:active {
                color: color-accent-2
            }
        }
    }
    
    .header-type {
        font-family: header-font, sans-serif
        color: dark-color-secondary
        text-transform: uppercase
        
        &.light {
            color: light-color-secondary
        }
    }
    
    .subheader-type {
        font-family: body-font, sans-serif
        font-style: italic
        font-weight: 300
        color: dark-color-tertiary
        
        &.light {
            color: light-color-tertiary
        }
    }
}

.application {
    &.theme--light {
        background: transparent
    }
    
    #hero {
        height: 100vh !important
        
        .hero-desktop {
            height: 100%
            overflow: hidden
            position: relative
            
            .layer {
                background-size: contain
                background-repeat: no-repeat
                width: 100%
                height: 100%
                position: fixed
                z-index: -1
                  
                &-01 {
                    background-image: url('/public/hero_04.png')
                    background-color: color-primary
                    background-position: top
                }
                &-02 {
                    background-image: url('/public/hero_03.png')
                    opacity: 0.9
                    background-position: bottom
                }
                &-03 {
                    background-image: url('/public/hero_02.png')
                    opacity: 0.9
                    background-position: bottom
                }
                &-04 {
                    background-image: url('/public/hero_01.png')
                    opacity: 0.9
                    background-position: bottom
                }
            }
        }
        
        .hero-header {
            position: relative
            padding: 1rem 0 0.5rem
            background-color: color-tertiary
            top: 40%
            opacity: 0.85
            
            .header-type {
                color: light-color-primary
            }
        }
    }
    
    #intro {
        background: color-secondary
        color: light-color-primary
        padding: 4rem 0 6rem
    }
    
    #skills {
        background: light-color-primary
        align-items: stretch
        padding-bottom: 4rem
        
        .skills-container {
            margin-top: -4rem
        }
        
        .card {
            height: 100% !important
            padding: 2rem 1.5rem
        
            .skill-icon {
                height: 72px
                fill: color-tertiary
                margin-bottom: 1rem
            }
        }
    }
    
    #works {
        display: none //remove later
        background: color-accent-1
        color: light-color-primary
    }
    
    #about {
        display: none //remove later
        background: color-secondary
        align-items: stretch
        
        .parallax {
            height: 100% !important
        }
    }
    
    #contact {
        background: color-accent-1
        
        .card {
            color: light-color-primary
        }
    }
}